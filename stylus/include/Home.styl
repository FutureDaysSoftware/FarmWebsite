.Home
	text-align: center
	padding-bottom: 2rem
	padding-left: 2rem
	padding-right: 2rem
	>img:nth-child(1)
		height: 14rem
		padding-top: 3rem
	>div:nth-child(2)
		font-family: Arvo
		font-size: 2rem
		padding-top: 3rem
	>div:nth-child(3)
		padding-bottom: 2rem
		text-transform: uppercase
	>div:nth-child(4)
		margin-left: 25rem
		margin-right: 25rem
		padding-bottom: 3rem
	>.calendar-images
		display: flex
		flex-wrap: wrap
		justify-content: center
		>div
			background: $Mustard
			flex: 1
			flex-basis: 25rem
			margin: 1rem
			position: relative
			>div
				background: $Charcoal
				color: white
				font-family: Arvo
				left: 50%
				padding: 1rem
				position: absolute
				top: 50%
				transform: translate(-50%, -50%)
		>div:hover
			>img
				opacity 0.5			
