.BlogRecipe
	margin-bottom: 5rem
	>div:nth-child(1)
		margin-bottom: 5rem
		>div
			display: flex
			>div
				flex: 1
				margin-left: 5rem
				margin-right: 5rem
				margin-top: 5rem
			>div:nth-child(2)
				margin-left: 0rem
				padding-top: 5rem
				>h1
					margin-bottom: 2rem
		>div:nth-child(2)
			>div
				>div
					font-weight: bold
					margin-bottom: 1rem
					text-transform: uppercase
				>p:nth-child(2)
					padding-left: 2rem
			>div:nth-child(2)
				padding-top: 0rem
	>div:nth-child(2)
		display: flex
		justify-content: center
		.calendar-image
			background: $Mustard
			flex: 2
			margin: 1rem
			position: relative
			>div
				background: $Charcoal
				color: white
				font-family: Arvo
				left: 50%
				padding: 1rem
				position: absolute
				text-align: center
				top: 50%
				transform: translate(-50%, -50%)
			&:hover
				>img
					opacity: 0.5
		.arrow
			flex: 1
			margin-top: 6rem