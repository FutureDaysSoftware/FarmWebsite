.WhereToFindUs
	margin-bottom: 3rem
	margin-top: 5rem
	text-align: center
	>h1
		font-family: Arvo
		margin-bottom: 3rem
	>p
		margin-right: 33%
		margin-left: 33%
		margin-bottom: 5rem
	>div:nth-child(3)
		display: flex
		flex-wrap: wrap
		justify-content: center
		margin-left: 5rem
		margin-right: 5rem
		text-align: left
		>div
			flex-basis: 15rem
			margin-bottom: 4rem
			>h3
				font-weight: bold
				margin-bottom: 1rem
			>div:nth-child(3)
				margin-bottom: 1rem
	>div:nth-child(4)
		display: flex
		justify-content: center
		.calendar-image
			background: $Mustard
			flex: 2
			margin: 1rem
			position: relative
			>div
				background: $Charcoal
				color: white
				font-family: Arvo
				left: 50%
				padding: 1rem
				position: absolute
				text-align: center
				top: 50%
				transform: translate(-50%, -50%)
			&:hover
				>img
					opacity: 0.5
		.arrow
			flex: 1
			margin-top: 6rem
