.AboutUs
	margin-bottom: 2rem
	>div:nth-child(1)
		display: flex
		padding-bottom: 4rem
		padding-top: 4rem
		>div
			flex: 1
			>img
				padding-left: 3rem
				padding-right: 3rem
			>p
				margin-right: 5rem
			>h1
				font-family: Arvo
				margin-bottom: 2rem
			>h4
				font-weight: bold
				margin-bottom: 1rem
				margin-top: 2rem
				text-transform: uppercase
		>div:nth-child(2)
			padding-top: 3rem
	>div:nth-child(2)
		display: flex
		justify-content: center
		.calendar-image
			background: $Mustard
			flex: 2
			margin: 1rem
			position: relative
			>div
				background: $Charcoal
				color: white
				font-family: Arvo
				left: 50%
				padding: 1rem
				position: absolute
				text-align: center
				top: 50%
				transform: translate(-50%, -50%)
			&:hover
				>img
					opacity: 0.5
		.arrow
			flex: 1
			margin-top: 6rem
